{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", ":timezone(Europe/Warsaw)"],
  schedule: ["before 10am on monday"],
  labels: ["dependencies", "renovate"],
  assignees: ["pawelkrystkiewicz"],
  dependencyDashboard: true,
  prHourlyLimit: 3,
  prConcurrentLimit: 5,
  branchConcurrentLimit: 10,
  rangeStrategy: "bump",
  lockFileMaintenance: {
    enabled: true,
    schedule: ["before 10am on monday"],
    automerge: true,
  },
  enabledManagers: ["npm", "github-actions"],
  automerge: false,
  automergeType: "pr",
  automergeStrategy: "squash",
  commitMessagePrefix: "⬆️ ",
  commitMessageAction: "Update",
  commitMessageTopic: "{{depName}}",
  commitMessageExtra: "to {{newVersion}}",
  ignoreDeps: [],
  packageRules: [
    {
      groupName: "React ecosystem",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^react/", "/^@types/react/"],
    },
    {
      groupName: "Next.js ecosystem",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^next/", "/^@next//"],
    },
    {
      groupName: "Testing tools",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^vitest/", "/^@vitest//"],
    },
    {
      groupName: "Sentry",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^@sentry//"],
    },
    {
      groupName: "Vercel",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^@vercel//"],
    },
    {
      groupName: "Auth (Kinde)",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^@kinde-oss//"],
    },
    {
      groupName: "TailwindCSS",
      schedule: ["before 10am on monday"],
      matchPackageNames: ["/^@tailwindcss//", "/^tailwindcss$/"],
    },
    {
      groupName: "Dev dependencies",
      matchDepTypes: ["devDependencies"],
      schedule: ["before 10am on monday"],
    },
    {
      matchUpdateTypes: ["patch"],
      automerge: true,
      platformAutomerge: true,
    },
    {
      matchUpdateTypes: ["minor"],
      matchCurrentVersion: "!/^0/",
      automerge: true,
      platformAutomerge: true,
    },
    {
      groupName: "Major updates",
      matchUpdateTypes: ["major"],
      minimumReleaseAge: "3 days",
      dependencyDashboardApproval: true,
      automerge: false,
      prPriority: -1,
      schedule: ["* 6 * * 6"],
    },
  ],
  vulnerabilityAlerts: {
    enabled: true,
    schedule: ["at any time"],
  },
}
