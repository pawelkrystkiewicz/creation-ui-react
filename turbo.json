{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "dist/**",
        "packages/ui/dist/**",
        "!.next/cache/**"
      ],
      "dependsOn": ["^build"],
      "cache": true
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
