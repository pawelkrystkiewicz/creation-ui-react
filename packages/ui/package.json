{
  "name": "@creation-ui/react",
  "version": "15.0.1",
  "sideEffects": false,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./index.css": {
      "default": "./dist/index.css"
    },
    "./theme.css": {
      "default": "./dist/theme.css"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest --config vitest.config.mts",
    "test:watch": "vitest --watch --config vitest.config.mts",
    "test:ui": "vitest --ui --config vitest.config.mts",
    "test:coverage": "vitest --coverage export JEST_IMAGE_SNAPSHOT_TRACK_OBSOLETE=1 --config vitest.config.mts",
    "init:component": "turbo gen component",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/browser": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^8.57.1",
    "jest-axe": "^7.0.1",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.51.1",
    "tsup": "^8.4.0",
    "typescript": "5.5.4",
    "vite": "^6.2.5",
    "vitest": "^3.1.1",
    "vitest-browser-react": "^0.1.1"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.6",
    "@headlessui/react": "^2.2.1",
    "@mona-health/react-input-mask": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "keyboard-key": "^1.1.0",
    "react-spring": "^9.7.5",
    "resize-observer-polyfill": "^1.5.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0",
    "@headlessui/react": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "clsx": "2.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "javascript",
    "react",
    "next",
    "create react app",
    "remix",
    "vite",
    "gatsby",
    "tailwind",
    "tailwind components",
    "tailwind elements",
    "tailwind library",
    "react library",
    "react components library",
    "tailwind sections",
    "tailwind css",
    "tailwind ui",
    "tailwind css react",
    "tailwind css next",
    "tailwind css remix",
    "tailwind css vite",
    "tailwind css gatsby"
  ],
  "jest": {
    "reporters": [
      "default",
      "jest-image-snapshot/src/outdated-snapshot-reporter.js"
    ]
  }
}
