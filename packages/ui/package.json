{
  "name": "@creation-ui/react",
  "version": "15.0.1",
  "sideEffects": false,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./index.css": {
      "default": "./dist/index.css"
    },
    "./theme.css": {
      "default": "./dist/theme.css"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "init:component": "turbo gen component",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/prettier": "^3.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "3.0.3",
    "eslint": "^8.57.0",
    "tsup": "^8.3.6",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.4",
    "@headlessui/react": "^2.2.0",
    "@mona-health/react-input-mask": "^3.0.3",
    "react-spring": "^9.7.5",
    "resize-observer-polyfill": "^1.5.1",
    "keyboard-key": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3  || ^4",
    "@headlessui/react": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "clsx": "2.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "javascript",
    "react",
    "next",
    "create react app",
    "remix",
    "vite",
    "gatsby",
    "tailwind",
    "tailwind components",
    "tailwind elements",
    "tailwind library",
    "react library",
    "react components library",
    "tailwind sections",
    "tailwind css",
    "tailwind ui",
    "tailwind css react",
    "tailwind css next",
    "tailwind css remix",
    "tailwind css vite",
    "tailwind css gatsby"
  ]
}
