  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitest/coverage-v8": "3.0.3",
    "eslint": "^8.57.0",
    "tsup": "^8.3.6",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@headlessui/react": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "clsx": "2.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3  || ^4",
    "@headlessui/react": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "clsx": "2.1.1"
