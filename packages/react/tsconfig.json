{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "incremental": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@root": ["./src/"],
      "@root/*": ["./src/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/tests",
    "**/*.cy.tsx",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
