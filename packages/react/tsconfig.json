{
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "incremental": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "es5",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "declarationMap": true
  },
  "include": ["./src"],
  "exclude": [
    "build",
    "**/build",
    "**/tests",
    "**/*.cy.tsx",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
