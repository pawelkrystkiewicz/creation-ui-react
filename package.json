{
  "name": "creation-ui-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build --filter=@creation-ui/react && changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "pre:enter": "changeset pre enter next",
    "pre:exit": "changeset pre exit next",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "turbo run build --filter=@creation-ui/react && changeset publish --tag dev",
    "test:ct": "cd packages/ui && bun run test:ct",
    "test:ui": "cd packages/ui && bun run test",
    "docker:build": "docker build -t creation-ui-visual-tests -f ct.dockerfile . --shm-size=2gb",
    "docker:test:visual": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/src/__screenshots__:/app/packages/ui/src/__screenshots__ creation-ui-visual-tests",
    "docker:test:visual:update": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/src/__screenshots__:/app/packages/ui/src/__screenshots__ creation-ui-visual-tests bun run test:ct:update --project=visual-regression",
    "docker:test:visual:ui": "docker run --rm -p 9323:9323 -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/src/__screenshots__:/app/packages/ui/src/__screenshots__ creation-ui-visual-tests bun run test:ct:ui --project=visual-regression",
    "docker:clean": "docker rmi creation-ui-visual-tests 2>/dev/null || true",
    "nuke": "rm -rf ./node_modules ./apps/*/node_modules ./packages/*/node_modules ./apps/*/.next ./apps/*/dist ./packages/*/dist ./.turbo ./apps/*/.turbo ./packages/*/.turbo ./apps/*/tsconfig.tsbuildinfo ./packages/*/tsconfig.tsbuildinfo ./playwright-report ./apps/*/playwright-report ./packages/*/playwright-report ./packages/*/test-results && bun i"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.0-beta.7",
    "@vitest/browser": "^4.0.0-beta.7",
    "@vitest/ui": "^4.0.0-beta.7"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@creation-ui/react": "workspace:*",
    "@tailwindcss/postcss": "^4.0.0",
    "@turbo/gen": "^2.5.5",
    "esbuild-plugin-copy": "^2.1.1",
    "plop": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
