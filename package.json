{
  "name": "creation-ui-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build --filter=@creation-ui/react && changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "pre:enter": "changeset pre enter next",
    "pre:exit": "changeset pre exit next",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "turbo run build --filter=@creation-ui/react && changeset publish --tag dev",
    "test:unit": "cd packages/ui && bun run test:unit",
    "test:unit:coverage": "cd packages/ui && bun run test:unit:coverage",
    "test:visual": "cd packages/ui && bun run test:visual",
    "test:visual:update": "cd packages/ui && bun run test:visual:update",
    "nuke": "rm -rf ./node_modules ./apps/*/node_modules ./packages/*/node_modules ./apps/*/.next ./apps/*/dist ./packages/*/dist ./.turbo ./apps/*/.turbo ./packages/*/.turbo ./apps/*/tsconfig.tsbuildinfo ./packages/*/tsconfig.tsbuildinfo ./playwright-report ./apps/*/playwright-report ./packages/*/playwright-report ./packages/*/test-results && bun i"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@creation-ui/react": "workspace:*",
    "@tailwindcss/postcss": "^4.0.0",
    "@turbo/gen": "^2.5.5",
    "esbuild-plugin-copy": "^2.1.1",
    "plop": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
