{
  "name": "creation-ui-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build --filter=@creation-ui/react && changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "pre:enter": "changeset pre enter next",
    "pre:exit": "changeset pre exit next",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "turbo run build --filter=@creation-ui/react && changeset publish --tag dev",
    "test:ct": "cd packages/ui && bun run test:ct",
    "test:ui": "cd packages/ui && bun run test",
    "docker:rebuild": "docker build -t playwright-bun -f ct.dockerfile . --shm-size=2gb",
    "docker:test": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/tests/__snapshots__:/app/packages/ui/tests/__snapshots__ playwright-bun",
    "docker:test:update": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/tests/__snapshots__:/app/packages/ui/tests/__snapshots__ playwright-bun bun run test:ct:update",
    "docker:test:ui": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/packages/ui/tests/__snapshots__:/app/packages/ui/tests/__snapshots__ playwright-bun bun run test:ct:ui",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "knip": "^5.48.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.4.2",
    "turbo": "^2.5.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@creation-ui/react": "workspace:*",
    "@tailwindcss/postcss": "^4.0.0",
    "@turbo/gen": "^2.3.4",
    "esbuild-plugin-copy": "^2.1.1",
    "plop": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
